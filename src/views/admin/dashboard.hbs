<div class="container mt-4"></div>
<h2>Dashboard</h2>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <p class="card-text display-6">{{stats.categories}}</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Articles</h5>
                <p class="card-text display-6">{{stats.articles}}</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text display-6">{{stats.users}}</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Tags</h5>
                <p class="card-text display-6">{{stats.tags}}</p>
            </div>
        </div>
    </div>
</div>
</div>