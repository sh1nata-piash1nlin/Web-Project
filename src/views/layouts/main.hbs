<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title> <!-- Dynamic Title -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <style>
        .navbar-brand img {
            height: 40px;
        }

        .main-nav .nav-link {
            color: #222;
            padding: 0.5rem 1rem;
            font-size: 14px;
            white-space: nowrap;
        }

        .sidebar {
            position: sticky;
            top: 20px;
        }

        .article-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .article-meta {
            color: #666;
            font-size: 0.9rem;
        }

        .comment-count {
            color: #666;
            font-size: 0.8rem;
        }

        .related-news {
            border-left: 3px solid #e5e5e5;
            padding-left: 15px;
        }   

        .related-news h3 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .dropdown-menu {
            border-radius: 0;
            margin-top: 10;
            border-top: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 0%;
        }

        .dropdown-item {
            font-size: 14px;
            padding: 0.5rem 1rem;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-item.dropdown:hover .nav-link {
            background-color: #f8f9fa;
        }

        .home-icon {
            font-size: 18px;
            transition: transform 0.3s, color 0.3s;
        }

        .home-icon:hover {
            color: #007bff;
        }

        .featured-article img {
            max-width: 200%;
            height: auto;
            width: 750px;
            border-radius: 5px;
        }

        .col-lg-6 img {
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: 35px;
            display: block;
            max-width: 300px;
            height: auto;
            border-radius: 10px;
        }

        .card {
            display: flex;
            flex-direction: column;
        }

        .row .col-lg-6 .card-body {
            padding-left: 0;
            padding-right: 0;
        }

        .row .col-lg-6 img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .row .col-lg-6 h4 {
            font-size: 1.1rem;
            line-height: 1.5;
            margin-bottom: 10px;
            word-wrap: break-word;
        }

        .row .col-lg-6 a {
            color: #343a40;
            font-weight: bold;
            text-decoration: none;
        }

        .row .col-lg-6 a:hover {
            color: #007bff;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand" href="{{#if isSubscriber}}/subscriber{{else}}/{{/if}}">
                <div class="me-3">VnExpress</div>
            </a>

            <!-- Centered Search Form -->
            <form class="d-flex mx-auto" action="{{#if isSubscriber}}/subscriber/search{{else}}/search{{/if}}" method="get" style="max-width: 400px;">
                <input class="form-control me-2" type="search" name="q" placeholder="Tìm kiếm" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
            </form>

            <div class="d-flex align-items-center">
                <div class="me-3">Mới nhất</div>
                <div class="me-3">International</div>

                {{#if isAuthenticated}}
                    <div class="dropdown">
                        <img src="{{authUser.avatar}}"
                            onerror="this.onerror=null; this.src='/src/static/img/default.png';"
                            alt="User Avatar" 
                            class="rounded-circle" 
                            style="width: 40px; height: 40px; cursor: pointer;"
                            id="navbarDropdownAvatar" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownAvatar">
                            <li><a class="dropdown-item" href="/profile">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/logout" method="POST">
                                    <button type="submit" class="dropdown-item text-danger">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                {{else}}
                    <a class="btn btn-outline-dark btn-sm" href="/login">Login</a>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- Secondary Navbar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom py-0">
        <div class="container">
            <div class="navbar-collapse">
                <ul class="navbar-nav main-nav d-flex justify-content-evenly w-100">
                    <li class="nav-item">
                        <a class="nav-link" href="{{#if isSubscriber}}/subscriber{{else}}/{{/if}}">
                            <i class="bi bi-house-door home-icon"></i>
                        </a>
                    </li>
                    {{#each categories}}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" 
                           href="{{#if ../isSubscriber}}/subscriber/category/{{this.id}}{{else}}/category/{{this.id}}{{/if}}" 
                           id="navbarDropdown{{this.id}}"
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false">
                            {{this.name}}
                        </a>
                        {{#if this.subcategories.length}}
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown{{this.id}}">
                            {{#each this.subcategories}}
                            <li>
                                <a class="dropdown-item" 
                                   href="{{#if ../../isSubscriber}}/subscriber/category/{{this.id}}{{else}}/category/{{this.id}}{{/if}}">
                                    {{this.name}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Main Content Column -->
            <div class="col-lg-8">
                {{{body}}}
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sidebar">
                    <!-- Featured Articles Sidebar -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Tin nổi bật</h5>
                        </div>
                        <div class="card-body">
                            {{#each featuredArticles}}
                            <div class="mb-3">
                                <h6>
                                    {{#if ../isSubscriber}}
                                        {{#if this.is_premium}}
                                            <a href="/subscriber/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{else}}
                                        {{#if this.is_premium}}
                                            <a href="/premium-notice" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{/if}}
                                        {{this.title}}
                                    </a>
                                </h6>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    <!-- Latest Articles -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Tin mới nhất</h5>
                        </div>
                        <div class="card-body">
                            {{#each latestArticles}}
                            <div class="mb-3">
                                <h6>
                                    {{#if ../isSubscriber}}
                                        {{#if this.is_premium}}
                                            <a href="/subscriber/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{else}}
                                        {{#if this.is_premium}}
                                            <a href="/premium-notice" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{/if}}
                                        {{this.title}}
                                    </a>
                                </h6>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    <!-- Most Viewed Articles -->
                    

                    <!-- Tabs Content -->
                    <div class="tab-content mt-3">
                        {{#each [healthArticles, lifeArticles, techArticles, carArticles]}}
                        <div class="tab-pane fade {{#if @first}}show active{{/if}}" 
                             id="tab-{{@key}}-content" 
                             role="tabpanel">
                            {{#each this}}
                            <div class="mb-3">
                                <h6>
                                    {{#if ../../isSubscriber}}
                                        {{#if this.is_premium}}
                                            <a href="/subscriber/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{else}}
                                        {{#if this.is_premium}}
                                            <a href="/premium-notice" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{/if}}
                                        {{this.title}}
                                    </a>
                                </h6>
                            </div>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Subscribe Modal -->
    <div class="modal fade" id="subscribeModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nội dung Premium</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn cần đăng ký tài khoản Premium để đọc bài viết này.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <a href="/register" class="btn btn-primary">Đăng ký ngay</a>
                </div>
            </div>
        </div>
    </div>

    <section class="bg-white py-5">
        <div class="container">
            <div class="row">
                <!-- Left Section: 60% -->
                <div class="col-lg-7 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-dark text-white d-flex justify-content-between">
                            <h3 class="mb-0">Tin theo chuyên mục</h3>
                            <a href="/" class="btn btn-outline-light btn-sm">
                                Tất cả tin
                                <i class="fas fa-caret-right ml-2"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <ul class="nav nav-tabs" id="categoryTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" 
                                            id="all-tab" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#tab-all-content" 
                                            type="button" 
                                            role="tab" 
                                            aria-controls="tab-all-content" 
                                            aria-selected="true">
                                        Tất cả
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" 
                                            id="health-tab" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#tab-health-content" 
                                            type="button" 
                                            role="tab" 
                                            aria-controls="tab-health-content" 
                                            aria-selected="false">
                                        Sức khỏe
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" 
                                            id="life-tab" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#tab-life-content" 
                                            type="button" 
                                            role="tab" 
                                            aria-controls="tab-life-content" 
                                            aria-selected="false">
                                        Đời sống
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" 
                                            id="tech-tab" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#tab-tech-content" 
                                            type="button" 
                                            role="tab" 
                                            aria-controls="tab-tech-content" 
                                            aria-selected="false">
                                        Công nghệ
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" 
                                            id="car-tab" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#tab-car-content" 
                                            type="button" 
                                            role="tab" 
                                            aria-controls="tab-car-content" 
                                            aria-selected="false">
                                        Xe
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content mt-3">
                                <div class="tab-pane fade show active" 
                                     id="tab-all-content" 
                                     role="tabpanel" 
                                     aria-labelledby="all-tab">
                                    <div class="row">
                                        {{#each featuredArticles}}
                                        <div class="col-lg-6">
                                            {{#if @first}}
                                            <div class="main-article mb-4">
                                                <img src="/public/images/{{this.featured_image}}" class="img-fluid rounded" alt="{{this.title}}">
                                                <h3 class="mt-3">
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h3>
                                                <p class="text-muted">{{this.abstract}}</p>
                                            </div>
                                            {{else}}
                                            <div class="related-article mb-3">
                                                <h4>
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h4>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="tab-pane fade" 
                                     id="tab-health-content" 
                                     role="tabpanel" 
                                     aria-labelledby="health-tab">
                                    <div class="row">
                                        {{#each healthArticles}}
                                        <div class="col-lg-6">
                                            {{#if @first}}
                                            <div class="main-article mb-4">
                                                <img src="/public/images/{{this.featured_image}}" class="img-fluid rounded" alt="{{this.title}}">
                                                <h3 class="mt-3">
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h3>
                                                <p class="text-muted">{{this.abstract}}</p>
                                            </div>
                                            {{else}}
                                            <div class="related-article mb-3">
                                                <h4>
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h4>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="tab-pane fade" 
                                     id="tab-life-content" 
                                     role="tabpanel" 
                                     aria-labelledby="life-tab">
                                    <div class="row">
                                        {{#each lifeArticles}}
                                        <div class="col-lg-6">
                                            {{#if @first}}
                                            <div class="main-article mb-4">
                                                <img src="/public/images/{{this.featured_image}}" class="img-fluid rounded" alt="{{this.title}}">
                                                <h3 class="mt-3">
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h3>
                                                <p class="text-muted">{{this.abstract}}</p>
                                            </div>
                                            {{else}}
                                            <div class="related-article mb-3">
                                                <h4>
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h4>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="tab-pane fade" 
                                     id="tab-tech-content" 
                                     role="tabpanel" 
                                     aria-labelledby="tech-tab">
                                    <div class="row">
                                        {{#each techArticles}}
                                        <div class="col-lg-6">
                                            {{#if @first}}
                                            <div class="main-article mb-4">
                                                <img src="/public/images/{{this.featured_image}}" class="img-fluid rounded" alt="{{this.title}}">
                                                <h3 class="mt-3">
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h3>
                                                <p class="text-muted">{{this.abstract}}</p>
                                            </div>
                                            {{else}}
                                            <div class="related-article mb-3">
                                                <h4>
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h4>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="tab-pane fade" 
                                     id="tab-car-content" 
                                     role="tabpanel" 
                                     aria-labelledby="car-tab">
                                    <div class="row">
                                        {{#each carArticles}}
                                        <div class="col-lg-6">
                                            {{#if @first}}
                                            <div class="main-article mb-4">
                                                <img src="/public/images/{{this.featured_image}}" class="img-fluid rounded" alt="{{this.title}}">
                                                <h3 class="mt-3">
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h3>
                                                <p class="text-muted">{{this.abstract}}</p>
                                            </div>
                                            {{else}}
                                            <div class="related-article mb-3">
                                                <h4>
                                                    <a href="/article/{{this.id}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                                </h4>
                                            </div>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Section: 40% -->
                <div class="col-lg-5">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body bg-white text-black">
                            <h5 class="card-title">Bài viết được xem nhiều nhất</h5>
                            <ul class="list-unstyled">
                                {{#each mostViewedArticles}}
                                <li class="mb-3">
                                    {{#if ../isSubscriber}}
                                        {{#if this.is_premium}}
                                            <a href="/subscriber/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{else}}
                                        {{#if this.is_premium}}
                                            <a href="/premium-notice" class="text-dark text-decoration-none">
                                        {{else}}
                                            <a href="/article/{{this.id}}" class="text-dark text-decoration-none">
                                        {{/if}}
                                    {{/if}}
                                    <i class="fas fa-eye mr-2"></i>
                                    {{this.title}}
                                    <small class="text-muted">({{this.view_count}} lượt xem)</small>
                                    </a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>Về chúng tôi</h5>
                    <!-- Footer content -->
                </div>
                <div class="col-md-4">
                    <h5>Chuyên mục</h5>
                    <!-- Categories -->
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <!-- Contact info -->
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/tabs.js"></script>
</body>
</html>