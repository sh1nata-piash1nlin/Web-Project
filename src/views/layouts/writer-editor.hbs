    {{{_sections.css}}}
    <style>
        .navbar-brand img {
            height: 40px;
        }

        .main-nav .nav-link {
            color: #222;
            padding: 0.5rem 1rem;
            font-size: 14px;
            white-space: nowrap;
        }

        .sidebar {
            position: sticky;
            top: 20px;
        }

        .article-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .article-meta {
            color: #666;
            font-size: 0.9rem;
        }

        .comment-count {
            color: #666;
            font-size: 0.8rem;
        }

        .related-news {
            border-left: 3px solid #e5e5e5;
            padding-left: 15px;
        }

        .related-news h3 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        /* Thêm style cho dropdown menu */
        .dropdown-menu {
            border-radius: 0;
            margin-top: 10;
            border-top: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 0%;
        }

        .dropdown-item {
            font-size: 14px;
            padding: 0.5rem 1rem;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-item.dropdown:hover .nav-link {
            background-color: #f8f9fa;
        }

        .home-icon {
            font-size: 18px;
            transition: transform 0.3s, color 0.3s;
        }

        .home-icon:hover {
            color: #007bff;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="" alt="NNN">
                
            </a>

            <div class="d-flex align-items-center">
                <div class="me-3">Mới nhất</div>
                <div class="me-3">International</div>
                <a class="btn btn-outline-dark btn-sm" href="/login">Login</a>
                {{!-- <div> 
                    <a class="btn btn-sm btn-primary" href="/login" role="button">
                        <i class="bi bi-hand-index"> Login </i>
                </div> --}}
            </div>
        </div>
    </nav>

    <!-- Secondary Navbar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom py-0">
        <div class="container">
            <div class="navbar-collapse">
                <ul class="navbar-nav main-nav d-flex justify-content-evenly w-100">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door home-icon"></i>
                        </a>
                    </li>
                    {{#each categories}}
                    <li class="nav-item dropdown">
                        <!-- Hiển thị danh mục cha -->
                        <a class="nav-link dropdown-toggle" href="{{this.link}}" id="navbarDropdown{{this.id}}"
                            role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{this.name}}
                        </a>
                        {{#if this.subcategories.length}}
                        <!-- Chỉ hiển thị dropdown khi có danh mục con -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown{{this.id}}">
                            {{#each this.subcategories}}
                            <li><a class="dropdown-item" href="{{this.link}}">{{this.name}}</a></li>
                            {{/each}}
                        </ul>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Main Content Column -->
            <div class="col-lg-8 " style="  box-shadow:  1px 2px 6px 1px rgba(0, 0, 0, 0.1);border-radius: 8px; ">
                {{{body}}}
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 mt-5">

                <div class="text-end">
                    <i class="bi bi-stars  " aria-hidden="true"></i>
                    <span class="h5 "> Hello, yourName</span></div>
                
                <div class="sidebar mt-5">
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            
                            <span class="h6">Info</span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6"></div>
                            <div class="col-lg-6">
                                <div class="card-body">
                                    {{#each featuredNews}}
                                    <div class="related-news mb-3">
                                        <h3><a href="{{this.link}}"
                                                class="text-dark text-decoration-none">{{this.title}}</a>
                                        </h3>
                                        <div class="comment-count">
                                            <i class="bi bi-chat-dots"></i> {{this.comments}}
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">Tin mới nhất</h6>
                        </div>
                        <div class="card-body">
                            {{#each latestNews}}
                            <div class="related-news mb-3">
                                <h3><a href="{{this.link}}" class="text-dark text-decoration-none">{{this.title}}</a>
                                </h3>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
