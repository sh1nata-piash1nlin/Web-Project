<div class="container mt-4">
    <div class="article-detail">
        <!-- Category and Date -->
        <div class="text-muted mb-2">
            {{article.category_name}} • {{article.publish_date}}
        </div>

        <!-- Title -->
        <h1 class="article-title mb-4">{{article.title}}</h1>

        <!-- Author -->
        <div class="author-info mb-4">
            <span class="text-muted">Bởi {{article.author_name}}</span>
        </div>

        <!-- Featured Image -->
        {{#if article.featured_image}}
        <div class="featured-image mb-4">
            <img src="/public/images/{{article.featured_image}}" class="img-fluid" alt="{{article.title}}">
        </div>
        {{/if}}

        <!-- Abstract -->
        <div class="abstract mb-4">
            <p class="lead">{{article.abstract}}</p>
        </div>

        <!-- Content -->
        <div class="content mb-4">
            {{{article.content}}}
        </div>

        <!-- Comments Section -->
        <div class="comments-section mt-5">
            <h4>Bình luận ({{comments.length}})</h4>
            {{#each comments}}
            <div class="comment mb-3">
                <div class="comment-content p-3 bg-light rounded">
                    <div class="d-flex justify-content-between">
                        <strong>{{this.user_name}}</strong>
                        <small class="text-muted">{{this.comment_date}}</small>
                    </div>
                    <p class="mb-0 mt-2">{{this.comment_text}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<style>
    .article-title {
        font-size: 2.5rem;
        font-weight: bold;
        line-height: 1.2;
    }

    .featured-image img {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
    }

    .content {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .abstract {
        font-size: 1.2rem;
        color: #666;
        border-left: 4px solid #007bff;
        padding-left: 1rem;
    }
</style> 