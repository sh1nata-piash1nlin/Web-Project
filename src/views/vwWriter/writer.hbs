{{#section 'js'}}
 <!-- Include your custom JS file to initialize the Froala editor -->
 <script type="text/javascript" src="/froala/js/froala_editor.pkgd.min.js"></script>
    <script src="/js/froala.js"></script>

    
{{/section}}

<div class="container mt-4">
    <h1>Write Your Content</h1>
  
    <!-- Optional: A form for saving content -->
    <form action="/writer/save" method="POST">
        
        <div class="card mt-4 " >
            <div class="card-body">
                <h4 class="card-title">Title</h4>
                <!-- Title input -->          
                <input type="text" class="form-control" id="article-title" name="title" placeholder="Enter the article title" required>
            </div>
        </div>
        <div class="card mt-4 mb-4">
            <div class="card-body">
                <h4 class="card-title">Abstract</h4>
                <!-- Optional: Abstract input -->
                <input type="text" class="form-control" name="abstract" placeholder="Enter the article abstract">
            </div>
        </div> 

        <!-- Textarea for Froala Editor -->
        <div id="froala-editor" name="editorContent"></div>

        <button id="save-button" type="button" class="btn btn-primary">Save Content</button>
    </form>

</div>
